// page 各个主页面用到的stylus必须在这里先被引用
@import "page/main1";


// 页面开始
$BaseWidth = 1200px

base-width()
    width: $BaseWidth
    margin 0 auto

[class*='layOut-']
    width: 1440px
    margin 0 auto

[class*='layOutPage-']
    width: $BaseWidth
    margin 0 auto
    padding 0 10px

.page_header
    position relative
    img 
        display: none
    .title_box
        font-size: 20px
        color: white
        position: absolute; 
        left: 0;   
        bottom 15%
        width 100%

html[clientwidth="1920"]
    .img_1920
        display block 
    .layOutPage-main
        border-top: 50px solid transparent;
        margin-top: -50px;

html[clientwidth="1440"]
    .img_1440
        display block
    .title_box
        bottom 16%
    .layOutPage-main
        border-top: 34px solid transparent;
        margin-top: -34px;

.footer_page  
    background: #BD1A2D;
    text-align: center
    color: #fff
    font-size: 14px;
    position relative
    .layOutPage-footer  
        .text
            height: 120px;
            width: $BaseWidth
            display: table-cell;
            vertical-align: middle;
            text-align: center; 
            span
                display: inline-block


[class*='sanjiao-']
    width:0;
    height:0;
    border-bottom:10px solid transparent;
    border-top:10px solid transparent;
    border-left:10px solid #EEEEEE;


/*index*/ 
.index
    img
        width: auto !important
.box_1 
    img
        width: 100% !important
    
.changeBox_a1
    width 550px
    height 350px
    position relative 
    .a_bigImg 
        img 
            position absolute
            top 0
            left 0
            display none

.fixe_box
    position: fixed
    right 10px
    bottom: 100px
    width: 75px;
    height: 235px;
    background: #FFFFFF;
    border: 1px solid #EEEEEE;
    border-radius: 2px;
    padding: 0 7px 
    font-size: 14px;
    line-height: 1.5;
    z-index 99
    ul.show_box 
        li 
            text-align: center
            border-top 1px solid #EEEEEE
            padding: 12px 0 8px
            img.light
                display: none 
            a:hover 
                div
                    color: #FFB46E
                img
                    display: none
                img.light
                    display: inline-block 
            &.about
                cursor pointer
                position relative
                div
                   color: #FFB46E
                .hide_box
                    display: none
                    position: absolute
                    right: 0;
                    bottom: 10px;
                    text-align: left
                    line-height: 1.6;
                    padding-right: 85px
                    div
                        color: #333333 !important;
                    .hide_box_box
                        background: #FFFFFF;
                        width: 285px;
                        height: 156px;
                        border: 1px solid #EEEEEE;
                        position relative
                        padding: 10px 20px
                        [class*='sanjiao-']
                            position: absolute
                            right: -8px
                            bottom 10px
                        .sanjiao-box 
                            right: -10px 
                        .sanjiao-item
                            right: 1px;
                            bottom: -10px;
                            z-index: 1;
                            border-left-color: #fff;
            &.about:hover
                .hide_box
                    display: inline-block

.changeDiv 
    position absolute
    top 0
    left 0
    display none
    h3 
        position absolute
        left 0px
        bottom 0
        width 100%
        height 40px
        line-height 40px
        background rgba(0,0,0,0.3)
        color #fff
        overflow hidden 
        // filter progid:DXImageTransform.Microsoft.gradient(startcolorstr=#99000000,endcolorstr=#99000000)
        a 
            width 80%
            font-weight normal
            font-size 16px
            display block
            padding-left 5px
            color #fff
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            &:hover 
                color #ff0000
    img 
        width: 550px
        height: 350px
        display:block;
                
/* ul_change_a2 */
.ul_change_a2 
    position absolute
    right 15px
    bottom 10px
    overflow hidden
    z-index 99999
    li 
        float left
        margin 0 4px
    span 
        width 12px
        height 12px
        display block
        background #fff
        border-radius 50%
        &.on 
            background #FF9600

.pageTitle  
    border-bottom: 1px solid #EEEEEE
    overflow hidden
    height: 40px 
    .text 
        display: inline-block 
        font-size: 18px; 
        font-weight: bold;
        color: #333333; 
        border-bottom: 3px solid #BD1A2D;
        padding-bottom: 9px;
    .text_right
        display: inline-block  
        img 
            width: 20px
            vertical-align: middle
            margin-right: 10px


[class*='index_box-']
    .list_item
        float left
        width 371px
        border-radius: 4px;

    .list_item_2
        margin: 0 32px;

.index
    a:hover 
        color: #000 !important

.index_box-2
    padding: 30px 0
    .pageTitle  .text
        color #BD1A2D
    .list_item
        .main
            ul
                li
                    position relative
                    padding-left: 40px
                    margin-top: 15px
                    .date_box 
                        width: 40px;
                        height: 40px;
