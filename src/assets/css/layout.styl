    .list_item_2
        .pageTitle   
            .text_right
                padding-top: 4px
                a
                    color: #ED9D2B
                    font-size: 16px;
                    img 
                        width: 20px
                        vertical-align: middle
                a:hover 
                    color: #b8730f !important
                    
    .list_item_3 
        .text   
            line-height: 20px !important
            .reply
                color: #ED9D2B
        .pageTitle   
            .text_right
                padding-top: 4px
                a
                    color: #ED9D2B
                    font-size: 16px;
                    img 
                        width: 15px
                        vertical-align: middle
                a:hover 
                    color: #b8730f !important

.index_box-3
    padding-bottom: 30px 
    img 
        width: auto
        margin-right: 10px
        vertical-align: middle
    .list_item 
        height: 359px;
        background: #FFFFFF;
        border: 2px solid #BD1A2D;
        .box_title
            background-image: url(../img/bg.png)
            height: 60px;
            line-height: 60px
            color: #fff
            text-align: center
            font-size: 18px
         
        .main
            .tips
                font-size: 12px
                padding-left: 16px;
            ul
                padding: 0 10px
                margin:10px  4px 10px 0
                overflow: auto;
                height: 246px;
                &::-webkit-scrollbar 
                    width 3px
                &::-webkit-scrollbar-track 
                    border-radius 10px
                    background-color#fff
                &::-webkit-scrollbar-thumb 
                    border-radius 10px
                    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,.3)
                    background-color#fff

                li 
                    position relative
                    font-size: 14px;
                    padding-left: 31px 
                    margin-top: 10px
                    img
                        width: 31px
                        poa-center-left(18px)
                    .img_box
                        width: 33px;
                        height: 30px;
                        line-height: 34px;
                        text-align: center
                        color: #fff
                        font-size: 12px;
                        background-image: url(../img/icon2.png)
                        poa-center-left(18px)

                    .press_box 
                        margin-left: 15px 
                        padding-top: 15px;
                        position relative
                        .text
                            poa-center-left(0) 

                        .press_box_box_box 
                            width: 245px;
                            height: 7px;
                            background: #EEEEEE;
                            border-radius: 4px; 
                            position relative
                            border-radius: 4px; 
                            display: inline-block
                            .press_box_item 
                                width: 100%
                                height: 100%
                                background-color: red
                                border-radius: 4px;
                                poa-center-left(0) 

.workResults 
    width: 621px;
    padding-left: 30px; 
    font-size: 14px; 
    font-weight: 400;
    color: #333333;
    .title2 
        font-size: 18px;
        padding: 26px 0
        
    .text2 
