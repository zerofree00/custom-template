        display block
        padding 0 0 0 20px
        height 34px
        line-height 34px
        color #666
        overflow hidden
        &:hover 
            color #9b0109
    .file 
        background url(../img/arttext.png) no-repeat left center
    .images 
        background url(../img/artpic.png) no-repeat left center
