/*列表页*/
.where 
    color #c7020d
    height 40px
    line-height 40px
    background url(../img/map.png) no-repeat 20px center #f6f6f6
    padding 0 0 0 45px
    font-size 15px
    a 
        color #c7020d
        &:hover 
            color #9b0109
    i 
        margin 0 5px

.list-content 
    min-height 600px
    padding 20px
    td 
        vertical-align top

/*列表页————左边*/
.sidebar 
    margin 0 26px 0 0
    h2 
        height 56px
        line-height 56px
        background #c2000b
        color #fff
        position relative
        font-size 20px
        text-align center
        span 
            i 
                background url(../img/sidebar_h2_i.png) no-repeat center bottom
                width 100%
                height 9px
                display block
                position absolute
                left 0
                bottom -9px
.sidebar-list 
    margin 15px 0 0
    li 
        height 40px
        line-height 40px
        margin 0 0 5px
        font-size 16px
        overflow hidden
        a 
            display block
            background #f2f4fb
            color #1c1c1c
            font-size 16px
        i 
            background #e8eaf2
            float left
            width 13px
            height 40px
            margin 0 30px 0 0
.sidebar-list li:hover a,.sidebar-list li.on a 
    color #fff
    font-weight bold
    background #cf0813
.sidebar-list li:hover i,.sidebar-list li.on i 
    background #d82b35
/*列表页————右边*/
.list-right-title 
    height 40px
    border-bottom 3px solid #dbe4ea
    font-size 18px
    color #c7020d
    background url(../img/list_right_icon.png) no-repeat left top

.list-right-title 
    span 
        height 40px
        line-height 36px
        border-bottom 3px solid #c7020d
        display inline-block
        padding 0 10px 0 40px
.list-right-ul 
    height 690px
    overflow hidden
    margin 10px 0 0
    li 
        border-bottom 1px solid #e8eaf2
        height 45px
        line-height 45px
        overflow hidden
        a 
            color #222
            font-size 16px
            &:hover 
                color #ff730d
        i 
            color #7d7d7d
            float right
            margin 0 0 0 5px
.page 
    color #333
    font-size 0
    height 31px
    line-height 29px
    margin 30px 0 25px
    text-align center
    span 
        display inline-block
        font-size 16px
        margin 0 12px
        i 
            color #c7020d
    a 
        display inline-block
        color #333
        min-width 30px
        padding 0 5px
        border 1px solid #e2e2e2
        border-left 0
        font-size 16px
        text-align center
        *margin-left -1px
        &.home 
            border-left 1px solid #e2e2e2
    select 
        font-size 16px
        border 1px solid #e2e2e2
        width 55px
        padding 3px 2px

.page a:hover,.page a.on 
    background #c7020d
    color #fff

/*详情页开始*/
