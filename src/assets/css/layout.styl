/*附件*/
.attachment-tit 
    line-height 32px
    height 32px
    background url(../img/fujianimg.png) repeat-x 20px center
    .fujian 
        font-size 18px
        background url(../img/artfj.png) #fff no-repeat left center
        padding 0 10px 0 20px
    .engfujian 
        font-size 12px
        color #999
        background #fff
        padding 0 0 0 10px
.attachment-tex 
    padding 0 0 0 18px
